#!/usr/bin/env node

import fs from 'node:fs';
import path from 'node:path';
import { createRequire } from 'module';

const require = createRequire(import.meta.url);

try
{
	fs.accessSync(path.resolve(__dirname, '../dist/index.js'), fs.constants.F_OK);
	require('../dist/cli.js');
}
catch (e)
{
	require('tsx').globalPreload();
	require('../src/cli.ts');
}
